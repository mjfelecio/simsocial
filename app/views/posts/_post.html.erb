<%= link_to user_post_path(current_user, post) do %>
  <div 
  id="<%= dom_id post %>" 
  class="p-4 m-4 bg-gray-50 rounded-xl shadow cursor-pointer"
>
    <div>
      <div class="flex justify-between">
        <%# User Info %>
        <div class="flex gap-2">
          <img src="https://styles.redditmedia.com/t5_61eeg4/styles/communityIcon_rwdnivzushte1.jpg?width=48&amp;height=48&amp;frame=1&amp;auto=webp&amp;crop=48:48,smart&amp;s=c27504576052175f2d4baf12b7a0a7137b94c98c" alt="r/Pasig icon" class="mb-0 shreddit-subreddit-icon__icon rounded-full overflow-hidden nd:visible nd:bg-secondary-background  w-full h-full" width="24" style="width: 24px;" loading="lazy">
          <p class="text-[12px]"> <%= post.user.username %> â€¢ 8 hours ago </p>
        </div>
        <%# Edit Delete Button %>
        <div class="flex gap-1">
          <%= link_to edit_user_post_path(current_user, post) do %>
          <div class="icon-button pl-[10px] ">
            <%= image_tag "icons/edit.svg", alt: "Edit Post Button", class: "size-4" %>
          </div>
        <% end %>
        <%# TODO: Add confirmation modal before you delete a post %>
        <%= button_to [current_user, post], method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?" } do %>
          <div class="icon-button">
            <%= image_tag "icons/delete.svg", alt: "Delete Post Button", class: "size-4" %>
          </div>
        <% end %>
    </div>
  </div>
  <p class="text-xl/tight font-semibold">
    <%= post.title %>
  </p>
</div>
<div class="py-3">
  <p class="text-sm">
    <%= post.content %>
  </p>
</div>
<%# Interactive Buttons %>
<div class="flex gap-2">
  <div class="icon-button">
    <%= image_tag "icons/like.svg", alt: "Like Button", class: "size-4" %>
    <p class="text-sm font-medium">3</p>
  </div>
  <div class="icon-button">
    <%= image_tag "icons/comment.svg", alt: "Comment Button", class: "size-4" %>
    <p class="text-sm font-medium">5</p>
  </div>
</div>
</div>
<% end %>

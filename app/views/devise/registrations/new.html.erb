<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="min-h-screen flex items-center justify-center translate-y-[-50px]">
    <div class="w-full max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow-sm">
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Form Title -->
      <h5 class="text-3xl text-center font-medium text-gray-900 mb-4">Sign up</h5>

      <!-- Email Field -->
      <div class="field">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-text-field" %>
      </div>

      <!-- Password Field -->
      <div class="field">
        <%= f.label :password, class: "form-label" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-text-field" %>
      </div>

      <!-- Confirm Password Field -->
      <div class="field">
        <%= f.label :password_confirmation, class: "form-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-text-field" %>
      </div>

      <!-- Sign Up Button -->
      <div class="actions">
        <%= f.submit "Sign up", class: "primary-btn my-4 w-full" %>
      </div>
      <p>

      <!-- Log In Prompt -->
      <div class="text-sm font-medium text-gray-500">
        Already have an account? <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
<% end %>

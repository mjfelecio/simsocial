<%= form_for user, url: user_profile_path(user) do |f| %>
  <div class="flex flex-col">
    <div>
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-text-field" %>
    </div>
    <div>
      <%= f.label :username, class: "form-label" %>
      <%= f.text_field :username, class: "form-text-field" %>
    </div>
    <div>
      <%= f.label :profile_picture, class: "form-label" %>
      <%= f.text_field :profile_picture, class: "form-text-field"  %>
    </div>
    <%# Buttons %>
    <div class="flex place-self-end gap-2 my-3">
      <div class="danger-btn my-2"> 
        <%= link_to "Cancel", user_profile_path(user) %>
      </div>
      <div>
        <%= f.submit "Submit", class: "primary-btn my-2" %>
      </div>
    </div>
  </div>
<% end %>
